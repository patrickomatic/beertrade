<%= render "navigation", active: :import_trades %>

<h2>bulk import trades for a user</h2>

<%= form_for(Trade.new) do |f| %>
  <div class="reddit-username-input form-group has-feedback">
    <%= f.label :participant_username, "reddit username that we're importing trades for:", class: "control-label" %>
    <%= render "users/reddit_user_search" %>
  </div>

  <div class="form-group">
    <%= f.label :users_to_import, "list of reddit usernames they traded with:", class: "control-label" %>
    <%= text_area_tag :users_to_import, "", class: "form-control" %>
  </div>

  <%= f.submit "import trades", class: "btn btn-primary" %>
<% end %>
